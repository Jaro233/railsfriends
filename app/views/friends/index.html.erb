<% if user_signed_in? %>

<div id="friends">
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %>
    <%= render friend %>
    <%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger", data: { confirm: 'Are you sure?' }  %>
    <br>
    <% end %>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-outline-dark"%>

<% else %>

<h1>Hello world!</h1>
This is my first Rails webpage...

<% end %>



